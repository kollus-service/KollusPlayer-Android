<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmark_item_layout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">
    <LinearLayout
        android:id="@+id/bookmark_label_layout"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
	    <TextView 
	        android:id="@+id/bookmark_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12dp"
			android:textColor="@android:color/white"
			android:textStyle="bold"
			android:singleLine="true"
			android:ellipsize="end"
			android:shadowColor="#ff000000"
			android:shadowRadius="5"/>
    </LinearLayout>
   	<RelativeLayout
	    android:id="@+id/bookmark_item"
		android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <ImageView 
			android:id="@+id/bookmark_thumbnail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY"/>
	    <ImageButton
			android:id="@+id/bookmark_delete_btn"
			android:background="@drawable/bookmark_delete_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_small" />
	    <LinearLayout
	        android:id="@+id/bookmark_title_layout"
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:gravity="center_horizontal"
			android:background="#80000000">
		    <TextView 
		        android:id="@+id/bookmark_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/margin_small"
				android:textSize="12dp"
				android:textColor="@android:color/white"
				android:textStyle="bold"
				android:singleLine="true"
				android:ellipsize="end"
				android:shadowColor="#ff000000"
				android:shadowRadius="5"/>
	    </LinearLayout>
	</RelativeLayout>
    <!--  
	<TextView 
	    android:id="@+id/bookmark_no_data"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="No Data"
		android:textSize="12sp"
		android:textColor="@android:color/white"
		android:textStyle="bold"
		android:shadowColor="#ff000000"
		android:shadowRadius="5"
		android:visibility="gone" />
	-->    
	<TextView android:id="@+id/bookmark_time"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingTop="5dp"
		android:paddingBottom="12dp"
		android:text="00:00"
		android:textSize="12dp"
		android:textColor="@android:color/white"
		android:textStyle="bold"
		android:shadowColor="#ff000000"
		android:shadowRadius="5"/>
</LinearLayout>